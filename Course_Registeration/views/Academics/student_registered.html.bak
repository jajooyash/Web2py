{{extend 'layout.html'}}
<style>
#pic {
    position: fixed;
    bottom: 70px;
    right: 1px;
    
}
table
{
    width:78%;
    
}
th
{
    padding:5px;
        font-size:15px;
    background-color: green;
    color: white;
    text-align:center;
    border:2px solid black;
    border-collapse:collapse
    
    
}
    
    tr,td
{
    text-align:center;
        border:2px solid black;
        border-collapse:collapse;
        padding:5px;
        font-size:15px;
}
table
    {
        
        text-align:center;
        border:3px solid black;
    border-collapse:collapse;
    }
</style>

<h1>List of Students</h1>
<br/>
<table>
    <tr>
        <th>Roll No</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Email-id</th>
        <th style="width:100px">Stream</th>
        <th>Program</th>
        <th>Year</th>
        <th>CGPA</th>
        <th>Contact No</th>
        <th style="width:30px">No Of Courses</th>
        <th style="width:30px">No Of Project</th>
    </tr>
    {{ for r in form: }}
    <tr>
        <td>{{=r.Rollno}}</td>
        <td>{{=r.First_name}}</td>
        <td>{{=r.Last_name}}</td>
        <td>{{=r.Gender}}</td>
        <td>{{=r.Email_id}}</td>
        <td>{{=r.Stream}}</td>
        <td>{{=r.Program}}</td>
        <td>{{=r.Years}}</td>
        <td>{{=r.CGPA}}</td>
        <td>{{=r.Mobileno}}</td>
        <td>{{=r.No_Of_Courses}}</td>
        <td>{{=r.No_Of_Project}}</td>
    </tr>
    {{pass}}
</table>
<div id="pic">
         <img src="http://127.0.0.1:8000/Course_Registration/static/_2.12.3/studentart.gif" alt="" width=300px/>
</div>
